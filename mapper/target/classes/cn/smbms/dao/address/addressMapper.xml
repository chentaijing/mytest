<!--	</select>-->
<!--查询-->
    <select id="getaddresslist" resultMap="userResultMap" >
		select d.*,userName from smbms_user u,smbms_address d
		where u.Id=d.userId

	</select>
    <!--	//添加语句 -->
    <insert id="addadderss" parameterType="address">
		insert into smbms_address(contact,addressDesc,postCode,creationDate)
		values (#{contact},#{addressDesc},#{postCode},#{creationDate})
	</insert>
    <!--//修改语句-->
    <update id="updateaddress" parameterType="address">
		update smbms_address set  contact=#{contact},addressDesc=#{addressDesc},postCode=#{postCode},creationDate=#{creationDate}
		where id=#{id}
	</update>
</mapper>